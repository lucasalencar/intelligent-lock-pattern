<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    
		<TextView
			android:id="@+id/lock_text_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="30dp"
        	android:paddingBottom="30dp"
	        android:gravity="center_horizontal"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
		
		<Gallery
		    android:id="@+id/lock_pattern_gallery" 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"/>
		
	</LinearLayout>
	
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/show_pattern_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back"
            android:onClick="backButtonAction" />

        <Button
            android:id="@+id/show_pattern_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/continue_to_next"
            android:onClick="confirmButtonAction"/>
        
    </LinearLayout>

</LinearLayout>